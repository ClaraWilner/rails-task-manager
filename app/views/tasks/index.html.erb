<h1 class="text-danger">My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
      <%= link_to task_path(task), class: 'text-decoration-none' do %>
        <li class="d-flex" >
          <div class="d-flex align-items-center" >
            <% if task.completed == true %>
              <i class="fa-regular fa-square-check block"></i>
            <% else %>
              <i class="fa-regular fa-square block"></i>
            <% end %>

            <div class="text-danger pe-2"><%=task.title %></div>
          </div>

          <%= link_to destroy_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>
        </li>
      <% end %>
  <% end %>
</ul>

<div class="ps-2"><%= link_to "+ add a new task", tasks_new_path, class: 'text-decoration-none' %></div>
